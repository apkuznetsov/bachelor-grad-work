@model Webapp.Models.Tests.TestDetailsViewModel

@{
    ViewData["Title"] = "Информация об измерении";
}

<div>
    <h4>Информация об измерении</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ExperimentName)
        </dt>
        <dd class="col-sm-10">

            <a asp-controller="Experiments"
               asp-action="Details"
               asp-route-id="@Model.ExperimentId">
                @Html.DisplayFor(model => model.ExperimentName)
            </a>
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Metadata)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Metadata)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartedTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartedTime)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EndedTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndedTime)
        </dd>
    </dl>
</div>

<div>
    <a asp-controller="Tests"
       asp-action="Edit"
       asp-route-id="@Model.TestId">Редактировать</a> |

    <a asp-controller="Tests"
       asp-action="Experiment"
       asp-route-id="@Model.ExperimentId">
        Вернуться к списку измерений эксперимента
    </a>
</div>
